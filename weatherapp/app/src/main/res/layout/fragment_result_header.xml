<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/weatherHeader"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/weatherCityCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:background="@color/t_white"
        android:elevation="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/weatherCity"
            style="@style/TextDisplay1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="City"
            android:textColor="@color/icons_black" />

        <ImageView
            android:id="@+id/weatherCityIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical|end"
            android:layout_margin="8dp"
            android:src="@drawable/ic_location_on_black_24dp"
            android:tint="@color/icons_black" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/weatherDay"
            style="@style/TextHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:gravity="center"
            android:text="Day"
            android:textSize="21sp"
            android:textColor="@color/t_white" />

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/weatherIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="Icon"
            android:textColor="@color/t_white"
            android:textSize="92sp" />

        <TextView
            android:id="@+id/weatherText"
            style="@style/TextSubHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="Complete Text"
            android:textColor="@color/t_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/weatherWind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:gravity="center|right"
                android:text="{wi_thermometer 40sp}"
                android:textColor="@color/t_white" />

            <TextView
                android:id="@+id/weatherTempText"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center|left"
                android:text="Day"
                android:textColor="@color/t_white" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
